---
layout: "default"
---
<% blog = @db(@getCollection('html')).blog %>
<% nextPost = blog.next(@document.url) %>
<% prevPost = blog.prev(@document.url) %>

<article class="post">
	<head>
		<h1><%= @document.title %></h1>
	</head>
	<div class="post-body">
		<%- @content %>
	</div>
</article>
<% if prevPost: %>
<a class="nav-link" href="<%= prevPost.url %>"><%= prevPost.title %></a>
<% end %>
<% if nextPost: %>
<a class="nav-link" href="<%= nextPost.url %>"><%= nextPost.title %></a>
<% end %>
